{% extends 'base.html.twig' %}

{% block title %}Datatables Demo{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col col-md-4">
            <h1>Dynamic Tables</h1>
            <i>Data created by javascript</i>

            <table id="dynamic_table" class="table table-striped"></table>
            <table id="t2" class="table table-striped"></table>
        </div>
        <div class="col col-md-4">
            <h3>page javascript</h3>
            <pre>{{ js|escape('html') }}
            </pre>
        </div>
        <div class="col col-md-4">
            <h3>app.js</h3>
            <pre>{{ appjs|escape('html') }}
            </pre>
        </div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{{ encore_entry_script_tags('dynamic-table') }}

    <script>
        $(document).ready( function () {
            // Create the DataTable
            var table = $('#t2').DataTable({})
        });
    </script>
{% endblock %}

